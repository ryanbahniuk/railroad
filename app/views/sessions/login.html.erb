<% if @user.errors.any? %>
<div id="error_explanation">
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_tag('/login') do %>
<%= text_field_tag 'email', nil, placeholder: 'Email' %>
<%= password_field_tag 'password', nil, placeholder: 'Password' %>
<%= submit_tag "Login" %>
<% end %>
<%= link_to 'New User', new_user_path %>