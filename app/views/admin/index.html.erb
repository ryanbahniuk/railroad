<div id="admin-bar">
  <%= link_to "<div class='intro'>Hello, <span class='hover-text-colored'>#{current_user.name}</span></div>".html_safe, edit_user_path(current_user) %>
  <ul class="no-style">
    <%= link_to '<li class="hover-background-colored"><span class="icon">&#8962;</span>Visit Site</li>'.html_safe, root_path %>
    <%= link_to '<li class="hover-background-colored"><span class="icon">&#59154;</span>Logout</li>'.html_safe, logout_path %>
  </ul>
</div>
<div class="container">
  <h3>Admin Section</h3>
  <%= link_to "Edit User Profile", edit_user_path(current_user) %>
  <%= link_to "New Post Type", new_post_type_path %>
  <% @post_types.each do |post_type| %>
    <h4><%= post_type.name.capitalize %></h4>
    <%= link_to "New #{post_type.name.capitalize}", new_post_path + "?id=#{post_type.id.to_s}" %>
    <ul>
      <% @posts.where(type: post_type.id.to_s).each do |post| %>
        <li><%= link_to "#{post.title}", edit_post_path(post) %></li>
      <% end %>
    </ul>
  <% end %>
</div>
